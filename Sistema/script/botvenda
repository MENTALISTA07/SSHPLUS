# - Funcao menu
menu() {
    local msg
        msg="â”â”â”â”â”â”â”âœ¦âœ—âœ¦â”â”â”â”â”â”â”â”\n"
        msg+="<b>â”â”â”â”âœ¦SEJAM BEM VINDOSâœ¦â”â”â”â”</b>\n"
        msg+="â”â”â”â”â”â”â”âœ¦âœ—âœ¦â”â”â”â”â”â”â”â”\n\n"
        msg+="<b>VENDEDOR OFICIAL DO SOCKSLITE</b>\n"
	msg+="<b>VALOR:</b> 12$ MENSAL\n"
	msg+="<b>CHAVE ALEATÃ“RIA: </b><code>a7c1c40d-57a5-4542-a6c2-32ed1565f182</code>\n"
	msg+="<b>APERTE EM â€œCOMPRAR ACESSOâ€ E ENVIE SEU COMPROVANTE</b>\n\n"
        msg+="âš ï¸<b>APENAS CHAME SE REALMENTE FOR COMPRAR</b>âš ï¸\n"
        ShellBot.sendMessage --chat_id ${message_chat_id[$id]} \
